{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./public/js",
    "rootDir": "./public/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["public/js/**/*"],
  "exclude": ["node_modules"]
} 